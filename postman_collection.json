        {
          "name": "Register a new user",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "register"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"email\": \"admin@test.com\",\n  \"password\": \"admin123\",\n  \"role\": \"admin\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "// Test: Register a new user",
                  "",
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test(\"Response time is less than 500ms\", function () {",
                  "    pm.expect(pm.response.responseTime).to.be.below(500);",
                  "});",
                  "",
                  "if (pm.response.json().token) {",
                  "    const token = pm.response.json().token;",
                  "    const responseUser = pm.response.json().user;",
                  "    ",
                  "    // Determine token variable based on user role or request body",
                  "    let tokenVar = \"userToken\";",
                  "    ",
                  "    // Check response user role first (works for both register and login)",
                  "    if (responseUser && responseUser.role === \"admin\") {",
                  "        tokenVar = \"adminToken\";",
                  "    } else if (pm.request.body && pm.request.body.raw) {",
                  "        // Fallback: check request body for register endpoint",
                  "        if (pm.request.body.raw.includes('\"role\": \"admin\"')) {",
                  "            tokenVar = \"adminToken\";",
                  "        }",
                  "    }",
                  "    ",
                  "    // Try to save to environment, fallback to collection variable",
                  "    try {",
                  "        if (pm.environment && pm.environment.name) {",
                  "            pm.environment.set(tokenVar, token);",
                  "        } else {",
                  "            pm.collectionVariables.set(tokenVar, token);",
                  "        }",
                  "    } catch (e) {",
                  "        pm.collectionVariables.set(tokenVar, token);",
                  "    }",
                  "    ",
                  "    console.log(`✅ Token saved to ${tokenVar}: ${token.substring(0, 20)}...`);",
                  "    if (responseUser) {",
                  "        console.log(`   User: ${responseUser.username} (${responseUser.role})`);",
                  "    }",
                  "}",
                  ""
                ]
              }
            }

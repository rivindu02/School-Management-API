  },
  "homepage": "https://github.com/yourusername/School-Management-API#readme",
  "type": "commonjs",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.0.0",
    "swagger-jsdoc": "^6.2.8",

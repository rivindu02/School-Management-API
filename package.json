    "build": "tsc",
    "generate:postman": "node scripts/generate-postman-collection.js"
  },
  "keywords": [
    "school-management",
    "education-api",
    "rest-api",
    "nodejs",
    "express",
    "typescript",
    "mongodb",
    "jwt-authentication",
    "swagger",
    "docker"
  ],

{
  "name": "school-management-api",
  "version": "1.0.0",
  "description": "A comprehensive RESTful API for managing schools, built with Node.js, Express, TypeScript, and MongoDB",
  "main": "dist/server.js",
  "scripts": {
    "test": "jest",
    "start": "ts-node src/server.ts",
    "dev": "NODE_ENV=development nodemon --watch src --exec ts-node src/server.ts",
